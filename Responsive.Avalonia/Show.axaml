<Grid
    x:Class="Responsive.Avalonia.Show"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:avalonia="clr-namespace:Responsive.Avalonia"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid.IsVisible>
        <MultiBinding Converter="{x:Static avalonia:LengthToVisibilityConverter.Instance}">
            <Binding Path="MeasuredLength" RelativeSource="{RelativeSource AncestorType={x:Type avalonia:BreakpointProvider}}" />
            <Binding Path="Breakpoint" RelativeSource="{RelativeSource Self}" />
            <Binding Path="Condition" RelativeSource="{RelativeSource Self}" />
            <Binding Path="Invert" RelativeSource="{RelativeSource Self}" />
            <Binding Path="Orientation" RelativeSource="{RelativeSource AncestorType={x:Type avalonia:BreakpointProvider}}" />
        </MultiBinding>
    </Grid.IsVisible>
</Grid>